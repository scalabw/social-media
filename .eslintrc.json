{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [ "airbnb", "prettier", "prettier/react", "plugin:prettier/recommended", "eslint-config-prettier" ],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},

	"rules": {
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [ ".js", ".jsx" ]
			}
		],
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "es5",
				"singleQuote": true,
				"printWidth": 100
			}
		]
	},
	"plugins": [ "prettier" ]
}
